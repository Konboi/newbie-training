    <div class="container-fluid">
      <div class="row-fluid">
      <%== erb :sidebar, :layout => false %>
        <div class="span9">
          <div class="hero-unit">
            <h2>NoPaste!!</h2>
              <% unless @session[:username].nil? %>
              <form action="<%= url_for('/post') %>" method="post">
                <div class="control-group <%= form.failed_on?(:content) ? 'error' : '' %>">
                  <textarea style="width: 90%; height: 300px;" name="content"></textarea>
                <% form.messages(:post, :content).each do |message| %>
                <span class="help-inline">
                  <%= message %>
                </span>
                <% end %>
                </div>
                <div class="control-group">
                  <input type="submit" value="post" class="btn btn-primary">
                </div>
              </form>
              <% else %>
                <p>
                  <a class="btn btn-primary" href="<%= url_for('/signin') %>">Please sign in</a>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
